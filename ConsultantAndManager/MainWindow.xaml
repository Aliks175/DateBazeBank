<Window x:Class="ConsultantAndManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConsultantAndManager"
        mc:Ignorable="d"
        MinHeight="555"
        MinWidth="810"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="ChooseUser" HorizontalAlignment="Right"
          Margin="0,10,10,0"
          VerticalAlignment="Top"
          Width="230"  Height="36" SelectionChanged="ChooseUser_SelectionChanged"/>
        <ComboBox Name="ChooseClient" HorizontalAlignment="Right"
          Margin="0,10,560,0"
          VerticalAlignment="Top"
          DisplayMemberPath="LastName"
          Width="230"  Height="36" SelectionChanged="ChooseClient_SelectionChanged">
        </ComboBox>
        <Frame x:Name="FrameList" Content="Frame" Margin="0,51,0,0"/>
    </Grid>
</Window>
